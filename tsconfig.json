{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ESNext",
    "lib": ["esnext", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "src/", ".eslintrc.js", ".next/types/**/*.ts"]
}
